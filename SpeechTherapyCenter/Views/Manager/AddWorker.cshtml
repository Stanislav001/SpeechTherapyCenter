@model WorkerViewModel

<form method="post" asp-action="AddWorker">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50" pl-3>Добавете нов служител</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="FirstName">Име:</label>
                    </div>
                    <div class="col-2">
                        <label asp-for="LastName">Презиме:</label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Salary">Заплата:</label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Year">Възраст:</label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Position">Позиция:</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Salary" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Year" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Position" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-10 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Добавете" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-74">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
