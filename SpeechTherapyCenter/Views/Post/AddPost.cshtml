@model PostViewModel

<form method="post" asp-action="AddPost">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <article class="post vt-post">
                <div class="row">
                    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
                        <div class="post-type post-img">
                            <a href="#"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-responsive" alt="image post"></a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">

                        <div class="caption">
                            <h3 class="md-heading"><label asp-for="Title">Заглавие:</label></h3>
                            <input asp-for="Title" class="form-control" />

                            <p><label asp-for="Body">Съдържание:</label></p>
                            <input asp-for="Body" class="form-control" />
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-info w-75" value="Добавете" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-danger w-74">Назад</a>
            </div>
        </div>
    </div>
</form>
